<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panaceasoft.citiesdirectory.fragments.NotificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_2"
            android:text="@string/notification_setting"
            android:textSize="@dimen/sub_head"
            android:textStyle="bold"
            />

        <ToggleButton
            android:id="@+id/toggle_noti"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="On"
            android:checked="true"
            />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doSubmit"
            android:text="@string/submit" />

        <include layout="@layout/ui_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_2"
            android:text="@string/latest_message"
            android:textSize="@dimen/sub_head"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/latest_push_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_2"
            android:text="@string/latest_message"
            android:textSize="@dimen/sub_head"
            />

    </LinearLayout>

</FrameLayout>
